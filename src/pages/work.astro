---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { companies } from "../data/work";
import Job from "../components/work/Job.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Work â€“ ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1>Work</h1>
      <p class="lede">A timeline of roles and projects.</p>

      <section class="timeline">
        <div class="rail" aria-hidden="true"></div>
        {
          companies.map((c) => (
            <ol class="jobs">
              {c.jobs.map((j) => (
                <Job company={c.name} job={j} />
              ))}
            </ol>
          ))
        }
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  h1 {
    margin-bottom: 0.25rem;
  }
  .lede {
    margin-top: 0;
    color: rgb(var(--gray));
  }

  .timeline {
    position: relative;
    margin-top: 2rem;
  }

  .rail {
    position: absolute;
    left: 0.8rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: rgba(var(--gray), 0.3);
  }

  .company {
    margin: 2rem 0 2.5rem 0;
  }

  .company-name {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
  }

  .company-name a {
    color: inherit;
    text-decoration: none;
  }

  .company-name a:hover {
    color: var(--accent);
  }

  .jobs {
    margin: 0;
    padding: 0;
  }

  @media (max-width: 600px) {
    .rail {
      left: 0.6rem;
    }
  }
</style>
