---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <div class="profile">
          <img src="/me.jpg" alt="Wessel van Lit" class="profile-image" />
          <div class="profile-content">
            <h1>Wessel van Lit</h1>
            <p class="title">Software Engineer</p>
            <p class="description">
              Software engineer with an unstoppable curiosity, both during and
              outside work hours. I can't sit still and love discovering new
              things constantly. In short, a true professional enthusiast.
            </p>
            <p class="description">
              I work most effectively in small, autonomous teams where knowledge
              sharing and a strong feedback culture lead to real, user-focused
              solutions.
            </p>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .hero {
    margin-bottom: 4em;
  }

  .profile {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    margin-bottom: 2em;
  }

  .profile-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    margin: 0;
  }

  .profile-content h1 {
    margin: 0 0 0.5rem 0;
    font-size: 2.5rem;
    font-weight: 600;
  }

  .title {
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--accent);
    margin: 0 0 1rem 0;
    font-weight: 500;
  }

  .description {
    line-height: 1.6;
    margin-bottom: 1.5rem;
    color: rgb(var(--gray));
  }

  @media (max-width: 768px) {
    .profile {
      flex-direction: column;
      align-items: center;
      text-align: justify;
      max-width: 100vw;
      overflow: hidden;
      padding-right: 0.5rem;
    }

    .profile-image {
      width: 120px;
      height: 120px;
    }

    .profile-content h1 {
      font-size: 2rem;
    }
  }

  /* Prevent long words/URLs from pushing layout wider than viewport */
  .profile,
  .profile-content,
  .description {
    overflow-wrap: anywhere;
    word-break: break-word;
  }
</style>
