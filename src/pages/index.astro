---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const posts = await getCollection("blog");
const toTime = (dateString: string) => {
    const time = Date.parse(dateString);
    return Number.isNaN(time) ? 0 : time;
};
const recentPosts = posts
    .sort((a, b) => toTime(b.data.date) - toTime(a.data.date))
    .slice(0, 5);
---

<BaseLayout>
    <style>
        .intro {
            font-size: 16px;
            color: var(--gray-600);
            line-height: 1.6;
            margin-bottom: 32px;
        }

        @media (prefers-color-scheme: dark) {
            .intro {
                color: var(--gray-400);
            }
        }

        .nav a {
            color: var(--gray-600);
            text-decoration: none;
            font-size: 14px;
            transition: color 0.2s ease;
        }

        .nav a:hover {
            color: var(--gray-900);
        }

        @media (prefers-color-scheme: dark) {
            .nav a {
                color: var(--gray-400);
            }

            .nav a:hover {
                color: var(--gray-100);
            }
        }

        .section-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 24px;
            color: var(--gray-900);
        }

        @media (prefers-color-scheme: dark) {
            .section-title {
                color: var(--gray-100);
            }
        }

        .post-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .post-item {
            margin-bottom: 24px;
        }

        .post-link {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            gap: 16px;
            text-decoration: none;
            color: var(--gray-900);
            transition: color 0.2s ease;
        }

        .post-link:hover {
            color: var(--gray-600);
        }

        .post-link:hover .post-title {
            text-decoration: underline;
            text-decoration-color: var(--gray-300);
            text-underline-offset: 2px;
        }

        @media (prefers-color-scheme: dark) {
            .post-link {
                color: var(--gray-100);
            }

            .post-link:hover {
                color: var(--gray-400);
            }

            .post-link:hover .post-title {
                text-decoration-color: var(--gray-700);
            }
        }

        .post-title {
            font-size: 16px;
            font-weight: 400;
            flex: 1;
            min-width: 0;
        }

        .post-date {
            font-size: 14px;
            color: var(--gray-500);
            flex-shrink: 0;
            font-variant-numeric: tabular-nums;
        }

        @media (prefers-color-scheme: dark) {
            .post-date {
                color: var(--gray-500);
            }
        }

        @media (max-width: 640px) {
            .post-link {
                flex-direction: column;
                gap: 4px;
            }

            .post-date {
                align-self: flex-start;
            }
        }
    </style>

    <div class="intro">
        <p>
            I'm a developer and writer. I work at Coolblue building distributed
            systems. I've been coding for 10 years and working professionally
            for 6.
        </p>
        <p>
            My life's work is to make technology reliable and systems easy to
            understand. I'm passionate about event-driven architectures, C#
            microservices, and pragmatic engineering.
        </p>
    </div>

    <section>
        <h2 class="section-title">Writing</h2>
        <ul class="post-list">
            {
                recentPosts.map((post) => (
                    <li class="post-item">
                        <a href={`/writing/${post.slug}/`} class="post-link">
                            <span class="post-title">{post.data.title}</span>
                            <span class="post-date">{post.data.date}</span>
                        </a>
                    </li>
                ))
            }
        </ul>
    </section>
</BaseLayout>
