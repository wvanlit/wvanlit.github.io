---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostList from "../components/PostList.astro";
import Job from "../components/Job.astro";
import { jobs } from "../data/jobs";

const currentJob = jobs[0];
---

<BaseLayout>
    <div class="intro">
        <p>
            I design event-driven architectures with reliability in mind,
            grounded in domain-driven design and real-world business needs.
            Mostly on the back-end, but on the front-end too.
        </p>
    </div>

    <Job
        title={currentJob.title}
        period={currentJob.period}
        description={currentJob.description}
    />
    <p><a href="/work">View all work experience â†’</a></p>

    <section>
        <h2 class="section-title">Writing</h2>
        <PostList limit={5} />
    </section>
</BaseLayout>

<style>
    .job {
        margin-block-end: 1rem;
    }
</style>
