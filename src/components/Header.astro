---
const navItems = [
  { href: "/writing", label: "Writing" },
  { href: "/books", label: "Books" },
  { href: "/projects", label: "Projects" },
  { href: "/work", label: "Work" },
  { href: "/about", label: "About" },
];
---

<header role="banner" class="header">
  <div class="header-inner">
    <div class="brand">
      <a href="/">litdev</a>
    </div>
    <nav role="navigation" aria-label="Main navigation" class="nav">
      <ul class="nav-list">
        {
          navItems.map((item) => (
            <li>
              <a href={item.href}>{item.label}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    padding: 0 0 24px;
    margin-bottom: 8px;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .brand {
    font-weight: 800;
    font-size: 1.125rem;
    letter-spacing: -0.025em;
  }

  .brand a {
    color: inherit;
    text-decoration: none;
  }

  .nav {
    display: flex;
    align-items: center;
  }

  .nav-list {
    display: flex;
    gap: 4px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-list li {
    margin: 0;
  }

  .nav-list a {
    color: inherit;
    text-decoration: none;
    padding: 10px 16px;
    border-radius: 8px;
    transition: all 0.2s ease;
    font-weight: 500;
    font-size: 0.95rem;
  }

  .nav-list a:hover {
    background: var(--muted);
    color: var(--link);
  }

  .nav-list a:focus {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  @media (max-width: 1000px) {
    .nav-list {
      gap: 2px;
    }

    .nav-list a {
      padding: 8px 12px;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 640px) {
    .nav-list a {
      padding: 6px 8px;
      font-size: 0.85rem;
    }
  }
</style>
