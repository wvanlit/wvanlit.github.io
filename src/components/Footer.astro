  <style>
    footer {
      margin-top: 4em;
      padding: 2em 0;
    }

    .footer-content {
      max-width: 640px;
      margin: 0 auto;
      padding: 0 20px;
      color: rgb(var(--gray));
      font-size: 0.9em;
      text-align: center;
    }
    .social {
      padding-left: 10px;
      display: inline-flex;
      vertical-align: middle;
      align-items: center;
      justify-content: center;
      gap: 1em;
    }
    .social a {
      color: rgb(var(--gray));
      transition: color 0.2s ease;
      display: inline-flex;
      align-items: center;
    }
    .social a:hover {
      color: var(--accent);
    }
    .social svg {
      width: 1.5em;
      height: 1.5em;
      fill: currentColor;
    }
  </style>
</footer>
