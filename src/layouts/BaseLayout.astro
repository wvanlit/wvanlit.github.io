---
const { title = "Wessel van Lit", description = "Wessel van Lit" } =
    Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <style>
            * {
                box-sizing: border-box;
            }

            :root {
                --gray-50: #fafafa;
                --gray-100: #f5f5f5;
                --gray-200: #e5e5e5;
                --gray-300: #d4d4d4;
                --gray-400: #a3a3a3;
                --gray-500: #737373;
                --gray-600: #525252;
                --gray-700: #404040;
                --gray-800: #262626;
                --gray-900: #171717;
            }

            html {
                color-scheme: light;
            }

            body {
                margin: 0;
                font-family:
                    -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                    "Helvetica Neue", Arial, sans-serif;
                color: var(--gray-900);
                background: white;
                line-height: 1.6;
                -webkit-font-smoothing: antialiased;
                -moz-osx-font-smoothing: grayscale;
            }

            main {
                max-width: 680px;
                margin: 0 auto;
                padding: 64px 24px 120px;
            }

            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
                font-weight: 600;
                line-height: 1.3;
                margin: 0;
                color: var(--gray-900);
            }

            h1 {
                font-size: 32px;
                margin-bottom: 8px;
            }

            h2 {
                font-size: 20px;
                margin-top: 48px;
                margin-bottom: 16px;
            }

            h3 {
                font-size: 18px;
                margin-top: 32px;
                margin-bottom: 12px;
            }

            p {
                margin: 0 0 16px 0;
                color: var(--gray-600);
                font-size: 16px;
            }

            a {
                color: var(--gray-900);
                text-decoration: underline;
                text-decoration-color: var(--gray-300);
                text-underline-offset: 2px;
                transition: text-decoration-color 0.2s ease;
            }

            a:hover {
                text-decoration-color: var(--gray-900);
            }

            strong {
                font-weight: 600;
                color: var(--gray-900);
            }

            ul,
            ol {
                margin: 0 0 16px 0;
                padding-left: 24px;
                color: var(--gray-600);
            }

            li {
                margin-bottom: 8px;
            }

            blockquote {
                margin: 32px 0;
                padding-left: 20px;
                border-left: 3px solid var(--gray-200);
                color: var(--gray-600);
                font-style: italic;
            }

            hr {
                border: none;
                border-top: 1px solid var(--gray-200);
                margin: 48px 0;
            }

            code {
                font-family:
                    "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", Consolas,
                    "Courier New", monospace;
                font-size: 0.9em;
                background: var(--gray-100);
                padding: 2px 6px;
                border-radius: 4px;
            }

            pre {
                background: var(--gray-100);
                padding: 16px;
                border-radius: 8px;
                overflow-x: auto;
                margin: 24px 0;
            }

            pre code {
                background: none;
                padding: 0;
            }

            ::selection {
                background: var(--gray-200);
            }

            @media (max-width: 640px) {
                main {
                    padding: 48px 20px 96px;
                }

                h1 {
                    font-size: 28px;
                }

                h2 {
                    font-size: 18px;
                }
            }

            /* Dark mode */
            @media (prefers-color-scheme: dark) {
                html {
                    color-scheme: dark;
                }

                body {
                    background: black;
                    color: var(--gray-100);
                }

                h1,
                h2,
                h3,
                h4,
                h5,
                h6,
                strong {
                    color: var(--gray-100);
                }

                p,
                li,
                blockquote {
                    color: var(--gray-400);
                }

                a {
                    color: var(--gray-100);
                    text-decoration-color: var(--gray-700);
                }

                a:hover {
                    text-decoration-color: var(--gray-100);
                }

                code {
                    background: var(--gray-900);
                }

                pre {
                    background: var(--gray-900);
                }

                blockquote {
                    border-left-color: var(--gray-800);
                }

                hr {
                    border-top-color: var(--gray-800);
                }

                ::selection {
                    background: var(--gray-800);
                }
            }
        </style>
        <style>
            .name {
                font-size: 32px;
                font-weight: 700;
                text-decoration-thickness: 1px;
                flex: 1;
            }

            .nav {
                display: flex;
                align-items: center;
                gap: 16px;
                flex-wrap: wrap;
            }
        </style>
    </head>
    <body>
        <main>
            <nav class="nav">
                <a class="name" href="/"><h1>Wessel van Lit</h1></a>

                <a href="/work">work</a>
                <a href="/writing">writing</a>
                <a
                    href="https://github.com/wvanlit"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    github
                </a>
                <!-- TODO: theme toggle -->
            </nav>
            <slot />
        </main>
    </body>
</html>
